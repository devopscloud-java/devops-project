pipeline {
  agent any
environment {
        AWS_REGION = 'us-east-1'
        CLUSTER_NAME = 'eks-cluster'
    }
tools {
        git 'git' // should match the name in Global Tool Configuration
    }


  stages {
    stage('Clone') {
      steps {
        git 'https://github.com/devopscloud-java/devops-project.git'
      }
    }

    stage('Build Image') {
      steps {
        sh 'docker build -t yellammam/test:latest .'
      }
    }

    stage('Push Image') {
      steps {
        withCredentials([usernamePassword(
          credentialsId: 'dockerhub-creds',
          usernameVariable: 'USER',
          passwordVariable: 'PASS'
        )]) {
          sh '''
          echo $PASS | docker login -u $USER --password-stdin
          docker push yellammam/test:latest
          '''
        }
      }
    }

    stage('Deploy to EKS') {
      steps {
        sh '''
        kubectl apply -f deployment.yaml --validate=false
        kubectl apply -f service.yaml --validate=false
        '''
      }
    }
  }
}
